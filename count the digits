import java.util.*;
public class Main{
    public static void main(String[]args){
        Scanner sc=new Scanner(System.in);
        int num=sc.nextInt();
        int number=num;
            int count=0;
            while(num>0){
            
                num/=10;
                count++;
            }
            System.out.print("The number of digits in "+ number +" is "+count);
    }
}
